{% extends 'layouts/adminLayout.html.twig' %}

{% block title %}Etudiants{% endblock %}

{% block body %}
    <section id="main">
        <div class="dashboard" id="dashboard">
            <div class="row">
                <div class="col-md-6">
                    <h1>Liste des etudiants</h1>
                </div>
            </div>

           <!-- <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <h4 class="card-title">
                           Filtre
                        </h4>
                    </div>
                </div>
            </div>-->
            <div class="row mt-5">

                <div class="col-md-12">
                    <div class="card ">
                        <h4 class="card-title" style="text-align: center;font-weight: bold;background-color: rgb(33, 37, 41)">Liste</h4>
                        <div class="card-body align-items-center mt-3">
                            <div class="form-row mb-3">
                            </div>
                            <table class="table" style="margin-top:20px;">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Code Apogee</th>
                                    <th>Nom</th>
                                    <th>Prenom</th>
                                    <th>Cin</th>
                                    <th>Filière</th>
                                    <th>Actions</th>

                                </tr>
                                </thead>
                                <tbody>
                                {% for etudiant in etudiants %}


                                    <tr>
                                        <td>{{ etudiant.id }}</td>
                                        <td>{{ etudiant.codeApogee }}</td>
                                        <td>{{ etudiant.nom }}</td>
                                        <td>{{ etudiant.prenom }}</td>
                                        <td>{{ etudiant.cin }}</td>
                                        <td>{{ etudiant.filiere }}</td>

                                        <td>
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <a href="{{ path('etudiant_edit', {'id': etudiant.id}) }}" class="btn btn-warning btn-sm btn-icon icon-left text-light"> Éditer</a>
                                                </div>
                                                <div class="col-md-3">
                                                    <a href="{{ path('etudiant_show', {'id': etudiant.id}) }}" class="btn btn-danger btn-sm btn-icon icon-left text-light"> Details</a>
                                                </div>

                                            </div>
                                        </td>
                                    </tr>

                                {% else %}
                                    <tr>
                                        <td colspan="7">aucun etudiant </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="row mt-3">
                                <div class="col-md-2">
                                    <a  class="btn btn-success " href="{{ path('etudiant_new') }}" >Nouveau Etudiant</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
{% endblock %}